<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment"
    android:background="@drawable/p16">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/login_btn_select"
        android:background="@drawable/checkout_button"
        android:layout_marginLeft="90dp"
        android:onClick="login_show"
        />

    <Button
        android:id="@+id/signup_btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/login_btn_select"
        android:background="@drawable/checkout_button"
        android:text="Sign up"
        android:onClick="signup_show"
        />

        <fragment
            android:id="@+id/fragment1"
            android:name="com.example.car_agency.log_in"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/login_btn_select"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>


</FrameLayout>